CREATE TABLE OGRENCILER(
 OGRENCI_NO INTEGER PRIMARY KEY,
	OGRENCI_AD CHAR(30) NOT NULL,
	OGRENCI_SOYAD CHAR(30),
	CINSIYET bool,
	DOGUM_TARIHI DATE,
	BOLUM_KOD INTEGER
);

